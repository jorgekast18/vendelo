<div class="bg-white flex justify-between items-center px-2">
<%= link_to products_path do %>
  <h1 class="text-2xl font-bold text-teal-500">Vendelo</h1>
<% end %>

  <div>
    <%= link_to t('.add_product'), new_product_path, class: "mx-2 text-teal-500 font-bold" if Current.user %>
    <%= link_to t('.favorites'), favorites_path, class: "mx-2 text-teal-500 font-bold" if Current.user %>
    <%= link_to t('.categories'), categories_path, class: "mx-2 text-teal-500 font-bold" if Current.user&.admin %>
    <%= link_to t('.login'), new_session_path, class: "mx-2 text-teal-500 font-bold" unless Current.user%>
    <%= link_to t('.register'), new_user_path, class: "mx-2 text-teal-500 font-bold" unless Current.user%>
    <%= link_to t('.logout'), session_path(Current.user.id), class: "mx-2 text-teal-500 font-bold" , data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm')
    }  if Current.user%>
  </div>
</div>